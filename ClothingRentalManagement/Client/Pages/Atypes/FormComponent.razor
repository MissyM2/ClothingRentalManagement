﻿<EditForm Model="@atype" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label>Name:</label>
        <div>
            <InputText @bind-Value="@atype.Name" class="form-control" />
            <ValidationMessage For="@(() => atype.Name)" />
        </div>
    </div>
    <button type="submit" class="btn btn-success btn-block">
        @ButtonText
    </button>
    <BackToList Target="atypes" />
</EditForm>

@code {
    [Parameter] public Atype atype { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }

}
