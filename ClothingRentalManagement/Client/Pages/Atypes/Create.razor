@page "/atypes/create/"

@inject HttpClient _client
@inject NavigationManager _navManager

<h3 class="card-title">Create New Apparel Type</h3>
<hr />
<br />

<FormComponent ButtonText="Add" OnValidSubmit="@CreateAtype" atype="atype" />


@code {
    Atype atype = new Atype();
    private IList<Atype> Atypes;


    protected async override Task OnInitializedAsync()
    {

    }

    private async Task CreateAtype()
    {
        await _client.PostAsJsonAsync(Endpoints.AtypesEndpoint, atype);
        _navManager.NavigateTo("/atypes/");
    }

}